{
    "compilerOptions": {
        "moduleResolution": "Node",
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "target": "ESNext",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
    ]
}